{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "consistent-return": 2,
        "indent": 0,
        "semi": [1, "always"],
        "space-unary-ops": 2,
        "linebreak-style": [0, "never"],
        "global-require": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "eol-last": 0,
        "max-len": 0,
        "no-else-return": 0,
        "quotes": 0,
        "arrow-parens": 0,
        "comma-dangle": 0,
        "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"]
    }
}